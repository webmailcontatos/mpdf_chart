<linearGradient id="grad1" x1="{{ gradient.getX1 }}%" y1="{{ gradient.getY1 }}%" x2="{{ gradient.X2 }}%" y2="{{ gradient.Y2 }}%">
    {% set stops = gradient.getStops %}
    {% for stop in stops %}
        <stop offset="{{ stop.getOffset }}%" style="{{ stop.getStyle }}"/>
    {% endfor %}
</linearGradient>
